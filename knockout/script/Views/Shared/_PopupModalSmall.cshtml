<div class="modal fade" id="dlgPopupModal" data-bind="with:PopupModalVM" >
    <div class="modal-dialog modal-lg" data-bind="css:{'modal-lg':option.modallg}" style="width:100%;max-width:300px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" data-bind="text:option.title">标题</h4>
            </div>
            <div class="modal-body">
                <div data-bind="template: { name: templateToUse  }"></div>
            </div>
            <div class="modal-footer" data-bind="css:{'hidden':!option.showCloseButton() && !option.showOKButton()}">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="css:{'hidden':!option.showCloseButton() }">关闭</button>
                <button type="button" class="btn btn-primary submit" data-bind="click:option.ok,css:{'hidden':!option.showOKButton() }">确定</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->