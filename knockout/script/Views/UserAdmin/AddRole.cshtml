@{
    ViewBag.Title = "创建角色";
}
<div class="row">
    <div class="list-header">
        @using (Html.BeginForm(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["Controller"].ToString(), FormMethod.Post, new { @class = "form-inline", id = "search_form", role = "form", style = "" }))
        {
            @Html.AntiForgeryToken()

    <div class="row margin-bottom-10">
        <label class="col-sm-2 control-label">角色代码：</label>
        <div class="col-sm-4">
            <input type="text" class="form-control  input-sm" id="position-roleid" name="roleID">
        </div>
    </div>

    <div class="row margin-bottom-10">
        <label class="col-sm-2 control-label">角色名：</label>
        <div class="col-sm-4">
            <input type="text" class="form-control  input-sm" id="position-rolename" name="roleName">
        </div>
    </div>
    <div class="row margin-bottom-10">
        <label class="col-sm-2 control-label">描述：</label>
        <div class="col-sm-4">
            <textarea class="form-control  input-sm" rows="3" id="position-description" name="description"> </textarea>
        </div>
    </div>

            <div>
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa"></i><strong>创建</strong></button>
            </div>




        }
    </div>

</div>

